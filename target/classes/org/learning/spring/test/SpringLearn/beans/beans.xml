<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-init-method="onCreate" default-destroy-method="onDestroy"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="patient"
		class="org.learning.spring.test.SpringLearn.Patient" scope="singleton"
		c:_0="44" c:_1="saiful">
		<property name="emergencyContacts">
			<list>
				<ref bean="contact1" />
				<ref bean="contact2" />
				<ref bean="contact3" />
				<ref bean="contact4" />
			</list>
		</property>
	</bean>


	<bean id="contact1"
		class="org.learning.spring.test.SpringLearn.EmergencyContact">
		<property name="name" value="Saiful"></property>
		<property name="phoneNumber" value="54646546"></property>
	</bean>
	<bean id="contact2"
		class="org.learning.spring.test.SpringLearn.EmergencyContact">
		<property name="name" value="Sakib"></property>
		<property name="phoneNumber" value="0177324654641151"></property>
	</bean>
	<bean id="contact3"
		class="org.learning.spring.test.SpringLearn.EmergencyContact">
		<property name="name" value="Asif"></property>
		<property name="phoneNumber" value="6546456"></property>
	</bean>
	<bean id="contact4"
		class="org.learning.spring.test.SpringLearn.EmergencyContact">
		<property name="name" value="Jamal"></property>
		<property name="phoneNumber" value="017736546241151"></property>
	</bean>
	
	<bean id="contactbook"
		class="org.learning.spring.test.SpringLearn.ContactBook">
		<property name="contacts">
			<map>
				<entry key="first" value-ref="contact1"></entry>
				<entry key="second" value-ref="contact2"></entry>
				<entry key="third" value-ref="contact3"></entry>
				<entry key="fourth" value-ref="contact4"></entry>
			</map>
		</property>
	</bean>
</beans>
